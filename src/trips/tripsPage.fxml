<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane onMouseMoved="#onEntering" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trips.tripsPageController">
    <children>
        <HBox alignment="CENTER" layoutY="118.0" prefHeight="150.0" prefWidth="601.0" spacing="30.0">
            <children>
                <Button mnemonicParsing="false" onAction="#viewTripButton" style="-fx-background-color: transparent;" text="View Trips" underline="true">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#bookTripButton" style="-fx-background-color: trnasparent;" text="Book Trip" underline="true">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#queryTripButton" style="-fx-background-color: transparent;" text="Query Trip" underline="true">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="267.0" layoutY="38.0" prefHeight="22.0" prefWidth="98.0" text="Trips Page" underline="true" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">
            <font>
                <Font name="Arial Rounded MT Bold" size="18.0" />
            </font>
        </Label>
        <Label fx:id="userLabel" layoutX="42.0" layoutY="85.0" text="Hello User" AnchorPane.leftAnchor="42.0" AnchorPane.topAnchor="85.0">
            <font>
                <Font name="Arial Rounded MT Bold" size="16.0" />
            </font>
        </Label>
      <Button layoutX="491.0" layoutY="80.0" mnemonicParsing="false" onAction="#logOutButton" style="-fx-background-color: transparent;" text="Log out" textFill="#030cff" underline="true">
         <font>
            <Font name="Arial Rounded MT Bold" size="16.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
